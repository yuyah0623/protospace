.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        - if current_user
          .media-left
            %a{ href: user_path(@prototype.user) }
              = image_tag(current_user.avatar, alt: "", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", class: "media-object", style: "width: 64px; height: 64px;")
          .media-body
            %h4#top-aligned-media.media-heading
              Top aligned media
            .proto-user
              %a{ href: "" }
                = "by " + current_user.name
              %span.degree
                = current_user.group
                = current_user.work
        - else
          .media-left
            %a{ href: "#" }
              = image_tag("data:image/svg+xml;base64,", style: "width: 64px; height: 64px;", alt: "", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", class: "media-object", style: "width: 64px; height: 64px;")
          .media-body
            %h4#top-aligned-media.media-heading
              Top aligned media
            .proto-user
              %a{ href: "" }
                = "by " + current_user.name
              %span.degree
                = current_user.group
                = current_user.work
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag(@prototype.main_image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.sub_images.each do |image|
          %li.list-group-item
            = image_tag(image.name, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          = link_to "iPad", "#", class: "btn btn-default"
        %li
          = link_to "wireframe", "#", class: "btn btn-default"
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span#num
        = "(#{@comments.count})"
    .col-md-8
      #comment_list
        = render partial: "prototypes/comment", collection: @comments
      = form_for([@prototype, @comment], remote: true, html: { class: "form-inline", role: "form" }) do |f|
        %h4 Write a comment
        .row
          .form-group.col-md-10
            = f.hidden_field :user_id, value: current_user.id
            = f.text_area :text, placeholder: "Your comments", rows: "3", class: "form-control"
          .form-group.col-md-2
            = f.submit "Comment", class: "button btn btn-primary"
