= form_for(@prototype, html: {class: "container proto-new"}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, class: "proto-new-title", placeholder: "Title"
    .row
      .col-md-12
        .cover-image-upload
          = f.fields_for :captured_images do |captured_image|
            = captured_image.file_field :name
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload
              = f.fields_for :captured_images do |captured_image|
                = captured_image.file_field :name
          %li.list-group-item.col-md-4
            .image-upload
              = f.fields_for :captured_images do |captured_image|
                = captured_image.file_field :name
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :copy, placeholder: "Catch Copy"
      .col-md-12
        = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            = text_field_tag 'prototype[tag_list][]', "", placeholder: "Web Design"
          .col-md-3
            = text_field_tag 'prototype[tag_list][]', "", placeholder: "UI"
          .col-md-3
            = text_field_tag 'prototype[tag_list][]', "", placeholder: "Application"
    .row.text-center.proto-btn
      = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"
